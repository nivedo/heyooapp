!!! 5
%html
  %head
    %title Jarvis

    - if @splash_page
      = stylesheet_link_tag "heyoo", 'data-turbolinks-track' => true
    - else
      = stylesheet_link_tag    "application", :media => "all"

    = javascript_include_tag "application"
    = javascript_include_tag params[:controller]
    - if @splash_page
      %script{:src => "//use.typekit.net/kgt1tta.js", :type => "text/javascript"}
      :javascript
        try{Typekit.load();}catch(e){}
    = csrf_meta_tags

    %meta{:name => "description", :content => ""}
    %meta{:name => "HandheldFriendly", :content => "True"}
    %meta{:name => "MobileOptimized", :content => "320"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}

  %body
    - if @splash_page
      = yield

    - else
      = render 'shared/nav'
      .outer-wrap
        .inner-wrap

          //.nav-push

          - if !flash[:notice].nil?
            .notice-container
              .notice-msg.info-msg #{flash[:notice]}
          - if !flash[:success].nil?
            .notice-container
              .notice-msg.success-msg #{flash[:success]}
          - if !flash[:alert].nil?
            .notice-container
              .notice-msg.info-msg #{flash[:alert]}
          //- if @title
          //  .title-wrapper
          //    %h1 #{@title}

          .content-wrapper
            .sidebar
              = render 'shared/sidebar'
            .main-content
              - if @title
                .main-title
                  %span.left #{@title}
              = yield
        - if @show_reply
          .push
      -#
        - if @show_reply
          .reply-footer
            .reply-top
              %label{:for => "reply_box"}
                %img{:src => "/assets/reply-arrow.svg"}
                %span Reply
            %input{:id => "reply_box", :type => "checkbox"}
            .reply-box
              .reply-wrapper
                = render :partial => 'contents/reply'
      :javascript
        $.backstretch('#{asset_path("skyline-color.jpg")}', {centeredX: false, centeredY: false});
