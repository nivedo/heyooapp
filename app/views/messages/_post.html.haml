

.embed-wrapper
  = form_for(@message, :html => { :class => 'embed-fields' }) do |f|
    %fieldset
      .inset-label
        %label To: 
      = f.text_field :title, :class => "req", :id => "recipients_list"
      = f.text_area :description, :placeholder => "Write your message here...", :class => "req", :rows => "6"
    .button-wrapper
      = f.submit "Post", :class => "submit"

